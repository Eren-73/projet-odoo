<odoo>
    <!-- Vues de Client -->
    <record id="view_parc_client_list" model="ir.ui.view">
        <field name="name">parc.client.list</field>
        <field name="model">parc.client</field>
        <field name="arch" type="xml">
            <list string="Liste des clients">
                <field name="name"/>
                <field name="adresse"/>
                <field name="contact"/>
                <field name="email"/>
                <field name="telephone"/>
                <field name="contrat_count" string="Nombre de Contrats" readonly="1"/>
            </list>
        </field>
    </record>

    <record id="view_parc_client_form" model="ir.ui.view">
        <field name="name">parc.client.form</field>
        <field name="model">parc.client</field>
        <field name="arch" type="xml">
            <form string="Client">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="adresse"/>
                        <field name="contact"/>
                        <field name="email"/>
                        <field name="telephone"/>
                    </group>
                    <notebook>
                        <page string="Contrats">
                            <field name="contrat_ids" readonly="1">
                                <list string="Contrats liés">
                                    <field name="name"/>
                                    <field name="date_debut"/>
                                    <field name="date_fin"/>
                                    <field name="montant"/>
                                    <field name="statut"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="date_debut"/>
                                        <field name="date_fin"/>
                                        <field name="montant"/>
                                        <field name="statut"/>
                                    </group>
                                </form>
                            </field>
                            <button name="action_open_contrat_form" string="Ajouter Contrat" type="object" class="oe_highlight"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_parc_client_kanban" model="ir.ui.view">
        <field name="name">parc.client.kanban</field>
        <field name="model">parc.client</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div>Email: <field name="email" t-if="record.email.raw"/></div>
                                <div>Téléphone: <field name="telephone" t-if="record.telephone.raw"/></div>
                                <div>
                                    <strong>Contrats: </strong>
                                    <t t-esc="record.contrat_count.raw"/> contrats
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Actions pour les vues de Client -->
    <record id="action_parc_client_list" model="ir.actions.act_window">
        <field name="name">Clients (Liste)</field>
        <field name="res_model">parc.client</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_parc_client_list"/>
    </record>

    <record id="action_parc_client_kanban" model="ir.actions.act_window">
        <field name="name">Clients (Kanban)</field>
        <field name="res_model">parc.client</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="view_parc_client_kanban"/>
    </record>
</odoo>
